<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.seneca.inventory.MainController"
            stylesheets="@../css/theme.css"
            styleClass="app-root"
            prefWidth="1200" prefHeight="720">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <children>
                <Label text="Inventory Manager" styleClass="title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Exit" onAction="#onExit" styleClass="btn btn-neutral"/>
            </children>
        </HBox>
    </top>

    <left>
        <VBox spacing="10">
            <children>
                <Label text="Navigation" styleClass="section"/>
                <Button text="Parts" onAction="#addPart" styleClass="btn btn-neutral"/>
                <Button text="Products" onAction="#addProduct" styleClass="btn btn-neutral"/>
            </children>
        </VBox>
    </left>

    <center>
        <GridPane hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>

            <!-- Parts panel -->
            <VBox spacing="10" GridPane.columnIndex="0">
                <children>
                    <Label text="Parts" styleClass="section"/>
                    <HBox spacing="8" alignment="CENTER">
                        <children>
                            <TextField fx:id="searchParts" promptText="Search parts" styleClass="text-input"/>
                            <Button text="Search" styleClass="btn btn-neutral" onAction="#searchPartsAction"/>
                        </children>
                    </HBox>
                    <TableView fx:id="tableParts" prefHeight="300" styleClass="table"/>
                    <HBox spacing="8" alignment="CENTER">
                        <children>
                            <Button text="Add" onAction="#addPart" styleClass="btn btn-success"/>
                            <Button text="Modify" onAction="#modifyPart" styleClass="btn btn-success"/>
                            <Button text="Delete" onAction="#deletePart" styleClass="btn btn-danger"/>
                        </children>
                    </HBox>
                </children>
            </VBox>

            <!-- Products panel -->
            <VBox spacing="10" GridPane.columnIndex="1">
                <children>
                    <Label text="Products" styleClass="section"/>
                    <HBox spacing="8" alignment="CENTER">
                        <children>
                            <TextField fx:id="searchProducts" promptText="Search products" styleClass="text-input"/>
                            <Button text="Search" styleClass="btn btn-neutral" onAction="#searchProductsAction"/>
                        </children>
                    </HBox>
                    <TableView fx:id="tableProducts" prefHeight="300" styleClass="table"/>
                    <HBox spacing="8" alignment="CENTER">
                        <children>
                            <Button text="Add" onAction="#addProduct" styleClass="btn btn-success"/>
                            <Button text="Modify" onAction="#modifyProduct" styleClass="btn btn-success"/>
                            <Button text="Delete" onAction="#deleteProduct" styleClass="btn btn-danger"/>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </GridPane>
    </center>

    <!-- Workshop 6 & 7 buttons -->
    <bottom>
        <HBox spacing="10"
              alignment="CENTER_RIGHT"
              BorderPane.alignment="CENTER">
            <children>
                <Button text="Save Data To File"
                        onAction="#onSaveDataToFile"
                        styleClass="btn btn-neutral"/>
                <Button text="Load Data from File"
                        onAction="#onLoadDataFromFile"
                        styleClass="btn btn-neutral"/>
                <Button text="Write data on DB"
                        onAction="#onWriteDataToDb"
                        styleClass="btn btn-neutral"/>
                <Button text="Load data from DB"
                        onAction="#onLoadDataFromDb"
                        styleClass="btn btn-neutral"/>
            </children>
            <padding>
                <Insets top="8" right="16" bottom="12" left="16"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
