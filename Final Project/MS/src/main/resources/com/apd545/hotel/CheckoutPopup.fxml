<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.apd545.hotel.CheckoutPopupController"
      spacing="12">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Checkout Payment" style="-fx-font-size: 18;" />

    <GridPane hgap="10" vgap="10">

        <Label text="Current Total:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblTotal" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Discount (%):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtDiscount" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Use Points:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPoints" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Payment Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPayAmount" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Payment Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbType" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="lblMsg" style="-fx-text-fill: red;" />

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Confirm" fx:id="btnConfirm" onAction="#onConfirm"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>

