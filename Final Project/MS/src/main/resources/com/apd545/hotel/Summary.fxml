<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.apd545.hotel.SummaryController"
      spacing="20"
      alignment="TOP_CENTER"
      styleClass="page"
      stylesheets="@app.css">

    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="appbar">
        <Label text="Kiosk â€“ Step 6: Booking Summary" styleClass="title"/>
    </HBox>

    <VBox spacing="20" styleClass="card">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

        <TitledPane text="Guests" expanded="true">
            <content>
                <GridPane hgap="10" vgap="8">
                    <Label text="Adults:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblAdults" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Children:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblChildren" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </TitledPane>

        <TitledPane text="Stay Dates" expanded="true">
            <content>
                <GridPane hgap="10" vgap="8">
                    <Label text="Check-in:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblCheckIn" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Check-out:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblCheckOut" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Nights:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblNights" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </TitledPane>

        <TitledPane text="Add-ons" expanded="true">
            <content>
                <GridPane hgap="10" vgap="8">
                    <Label text="Wi-Fi:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblWifi" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Breakfast:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblBreakfast" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Parking:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblParking" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Spa:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="lblSpa" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </TitledPane>

        <TitledPane text="Bill" expanded="true">
            <content>
                <GridPane hgap="10" vgap="8">
                    <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblSubtotal" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Tax (13%):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTax" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Total:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTotal" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </TitledPane>
    </VBox>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <padding><Insets top="10" right="20" bottom="20" left="20"/></padding>
        <Button text="Back" onAction="#backToAddOn"/>
        <Button text="Confirm" onAction="#goToConfirmation"/>
    </HBox>

</VBox>
