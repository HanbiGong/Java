<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.apd545.hotel.AdminController"
      alignment="CENTER"
      spacing="20"
      styleClass="page"
      stylesheets="@app.css">

    <Label text="Admin Login"
           style="-fx-font-size: 22px; -fx-padding: 10;" />

    <VBox spacing="12" alignment="CENTER">
        <TextField fx:id="txtEmail"
                   promptText="Email"
                   prefWidth="260"/>

        <PasswordField fx:id="txtPassword"
                       promptText="Password"
                       prefWidth="260"/>

        <Label fx:id="lblMsg" style="-fx-text-fill: red;"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Back" onAction="#onBack"/>
        <Button text="Login" onAction="#onLogin"/>
    </HBox>

</VBox>

