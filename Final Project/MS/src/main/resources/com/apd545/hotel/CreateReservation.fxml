<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.apd545.hotel.CreateReservationController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create Reservation" style="-fx-font-size: 18;" />

    <GridPane hgap="10" vgap="10">

        <Label text="Guest Name:" GridPane.rowIndex="0" />
        <TextField fx:id="txtGuest" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Room Name:" GridPane.rowIndex="1" />
        <TextField fx:id="txtRoom" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Check-in:" GridPane.rowIndex="2" />
        <DatePicker fx:id="dpIn" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Check-out:" GridPane.rowIndex="3" />
        <DatePicker fx:id="dpOut" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Add-ons:" GridPane.rowIndex="4" />
        <TextField fx:id="txtAddon" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Total:" GridPane.rowIndex="5" />
        <TextField fx:id="txtTotal" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Phone:" GridPane.rowIndex="6" />
        <TextField fx:id="txtPhone" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    </GridPane>

    <Label fx:id="lblMsg" style="-fx-text-fill: red;" />

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
