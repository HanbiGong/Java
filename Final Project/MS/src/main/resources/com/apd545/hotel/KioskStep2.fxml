<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.apd545.hotel.KioskStep2Controller"
      spacing="20"
      alignment="TOP_CENTER"
      styleClass="page"
      stylesheets="@app.css">

    <children>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="appbar">
            <children>
                <Label text="Kiosk â€“ Step 2: Select Dates" styleClass="title"/>
            </children>
        </HBox>

        <VBox spacing="20" alignment="CENTER_LEFT" styleClass="card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Check-in -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Check-In:" />
                <DatePicker fx:id="dpCheckIn" />
            </HBox>

            <!-- Check-out -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Check-Out:" />
                <DatePicker fx:id="dpCheckOut" />
            </HBox>

            <!-- Error Message -->
            <Label fx:id="lblError" text="" styleClass="error" />

            <!-- Buttons -->
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Back" onAction="#backToStep1" />
                <Button text="Next" onAction="#goStep3" />
            </HBox>
        </VBox>

    </children>
</VBox>
