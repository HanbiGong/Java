<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.senecacollege.application.workshop2.MainController"
            stylesheets="@styles.css">

    <!-- Top Title -->
    <top>
        <HBox alignment="CENTER" styleClass="top-title"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Vehicle Maintenance and Usage Management System"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" pannable="false">
            <VBox spacing="12" alignment="TOP_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Vehicle section -->
                <TitledPane text="Vehicle Details" expanded="true">
                    <VBox spacing="8">
                        <children>
                            <GridPane hgap="10" vgap="10">
                                <children>

                                    <Label text="Model:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtModel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Make:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtMake" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                    <Label text="Year:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtYear" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                    <Label text="Type:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="cbType" prefWidth="150"
                                              GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                </children>
                            </GridPane>
                        </children>
                    </VBox>
                </TitledPane>

                <!-- Maintenance section -->
                <TitledPane text="Maintenance Record" expanded="true">
                    <VBox spacing="8">
                        <children>
                            <GridPane hgap="10" vgap="10">
                                <children>

                                    <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <DatePicker fx:id="dpMaintenanceDate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtMaintenanceDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                    <Label text="Cost:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtMaintenanceCost" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                </children>
                            </GridPane>
                        </children>
                    </VBox>
                </TitledPane>

                <!-- Usage section -->
                <TitledPane text="Usage Log" expanded="true">
                    <VBox spacing="8">
                        <children>
                            <GridPane hgap="10" vgap="10">
                                <children>

                                    <Label text="Start Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <DatePicker fx:id="dpStartDate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="End Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <DatePicker fx:id="dpEndDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                    <Label text="Kilometers:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtKilometers" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                </children>
                            </GridPane>
                        </children>
                    </VBox>
                </TitledPane>

                <!-- Buttons -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Clear" fx:id="btnClear" onAction="#onClearClicked"
                            styleClass="btn-clear"/>
                    <Button text="Save" fx:id="btnSave" onAction="#onSaveClicked"
                            styleClass="btn-save"/>
                    <Button text="Summary" fx:id="btnViewSummary" onAction="#onViewSummaryClicked"
                            styleClass="btn-summary"/>
                </HBox>

                <!-- Records Table -->
                <TitledPane text="Current Records" expanded="true">
                    <VBox>
                        <children>
                            <TableView fx:id="tblRecords" prefHeight="200">
                                <columns>
                                    <TableColumn fx:id="colRecordType" text="Type" prefWidth="120"/>
                                    <TableColumn fx:id="colDetails" text="Details" prefWidth="280"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </TitledPane>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
