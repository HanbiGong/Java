<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.senecacollege.application.workshop3.controllers.HomepageController"
            stylesheets="@style.css"
            prefWidth="600" prefHeight="500">

    <children>

        <!-- Header -->
        <HBox styleClass="header" prefHeight="80"
              AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Label text="Auto Loan System" styleClass="header-title"/>
        </HBox>

        <!-- Content -->
        <VBox alignment="CENTER" spacing="25"
              AnchorPane.topAnchor="120"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <Button text="Login" prefWidth="240" styleClass="action-button" onAction="#onLogin"/>
            <Button text="Signup" prefWidth="240" styleClass="action-button" onAction="#onSignup"/>

        </VBox>

    </children>

</AnchorPane>
