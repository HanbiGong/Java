<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@style.css"
            fx:controller="ca.senecacollege.application.workshop3.controllers.CustomerController"
            prefWidth="750" prefHeight="650">

    <children>

        <VBox spacing="20" alignment="TOP_CENTER"
              AnchorPane.topAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <HBox styleClass="title-bar" alignment="CENTER">
                <Label text="Customer Information"/>
            </HBox>

            <GridPane hgap="10" vgap="12" alignment="CENTER">

                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="City:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Province:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbProvince" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            </GridPane>

            <Button text="Next" onAction="#onNext" prefWidth="200"/>

        </VBox>

    </children>

</AnchorPane>
